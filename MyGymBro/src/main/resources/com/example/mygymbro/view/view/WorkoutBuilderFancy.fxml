<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?> <BorderPane prefHeight="600.0" prefWidth="900.0" styleClass="root-pane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mygymbro.controller.WorkoutBuilderController">
    <center>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="600.0" prefWidth="300.0" spacing="10.0" styleClass="left-pane" HBox.hgrow="NEVER">
                    <children>
                        <Label styleClass="section-title" text="Libreria Esercizi" />
                        <HBox alignment="CENTER_LEFT" styleClass="search-bar-container">
                            <children>
                                <TextField promptText="Cerca esercizio..." styleClass="search-input" HBox.hgrow="ALWAYS" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                            </padding>
                        </HBox>
                        <Label styleClass="sub-text" text="Trascina per aggiungere" />

                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroller" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="availableExercisesContainer" spacing="10.0" styleClass="card-container-vbox" />
                            </content>
                        </ScrollPane>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>

                <VBox prefHeight="600.0" prefWidth="560.0" spacing="15.0" styleClass="right-pane" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label styleClass="workout-title" text="Workout Name" />
                            </children>
                        </HBox>

                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroller" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="currentWorkoutContainer" spacing="15.0" styleClass="card-container-vbox" />
                            </content>
                        </ScrollPane>

                        <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="Infinity" styleClass="save-button" text="SAVE WORKOUT" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </center>
</BorderPane>