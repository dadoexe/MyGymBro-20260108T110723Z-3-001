<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mygymbro.views.GraphicAthleteView">

    <top>
        <VBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f0f0f0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Label fx:id="lblWelcome" text="Benvenuto, Atleta!" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </top>

    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Le tue Schede:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>

                <ListView fx:id="listWorkouts" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10px 0 0 0;">
                    <Button onAction="#handleEditPlan" style="-fx-background-color: #FFC107; -fx-text-fill: black;" text="Modifica" />
                    <Button onAction="#handleDeletePlan" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Elimina" />
                </HBox>
                <Label fx:id="lblInfo" text="Nessuna scheda presente" textFill="#666666" visible="false" />
            </children>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" top="15.0" />
            </padding>
            <Button fx:id="btnCreatePlan" onAction="#handleCreatePlan" text="+ Nuova Scheda" />
            <Button mnemonicParsing="false" text="Logout" />
        </VBox>
    </bottom>

</BorderPane>
